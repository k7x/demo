
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/toolbar"



    android:orientation="vertical"
    android:weightSum="100">
    <TextView
        android:id="@+id/tv1"
        android:background="#000022"
        android:textColor="#ccff00"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="right"
        android:text=""/>

    <TextView
        android:id="@+id/tv2"
        android:background="#000022"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="right"
        android:layout_weight="10"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_weight="14">

        <Button
            android:layout_width="0dp"

            android:layout_marginBottom="0dp"

            android:layout_height="match_parent"
            android:id="@+id/clear"
            android:textSize="22dp"

            android:text="Clr"
            android:background="#ffeffd"
            android:layout_weight="20"/>
        <Button
            android:layout_width="0dp"
            android:layout_marginBottom="0dp"
            android:id="@+id/pow"
            android:background="#ffeffd"
            android:text="^"
            android:textSize="32dp"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <Button
            android:background="#ffeffd"
            android:id="@+id/sqrt"

            android:textSize="25dp"
            android:text="âˆš"

            android:layout_marginBottom="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <Button
            android:id="@+id/per"
            android:background="#ffeffd"
            android:text="(-ve)"
            android:layout_marginRight="1dp"
            android:textSize="21dp"
            android:layout_marginBottom="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18"/>
        <Button
            android:id="@+id/mul"
            android:text="X"
            android:layout_width="0dp"
            android:textSize="27dp"
            android:layout_marginBottom="-8dp"
            android:layout_marginLeft="-4dp"
            android:background="#ffeffd"
            android:layout_height="match_parent"
            android:layout_weight="22"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_weight="15">

        <Button
            android:id="@+id/ln"
            android:background="#ffeffd"
            android:text="ln"
            android:layout_marginBottom="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="22dp"
            android:layout_weight="20"/>
        <Button

            android:id="@+id/seven"
            android:text="7"
            android:fontFamily="serif"
            android:background="#000036"
            android:textColor="#FFFFFF"

            android:layout_marginRight="-7dp"
            android:layout_marginBottom="-7dp"
            android:layout_width="0dp"
            android:textSize="27dp"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <Button
            android:id="@+id/eight"
            android:text="8"
            android:background="#000036"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:layout_marginRight="-7dp"
            android:layout_marginBottom="-7dp"
            android:textSize="27dp"
            android:layout_height="match_parent"
            android:fontFamily=" serif"
            android:layout_weight="20"/>
        <Button
            android:id="@+id/nine"
            android:text="9"
            android:fontFamily=" serif"
            android:layout_marginBottom="-7dp"
            android:layout_width="0dp"
            android:background="#000036"
            android:textSize="27dp"
            android:textColor="#FFFFFF"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <Button
            android:textSize="27dp"
            android:id="@+id/div"
            android:background="#ffeffd"
            android:text="/"
            android:layout_width="0dp"
            android:layout_marginBottom="-2dp"
            android:layout_height="match_parent"
            android:layout_weight="20"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_weight="15">

        <Button
            android:id="@+id/log"
            android:text="log"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#ffeffd"
            android:textSize="22dp"
            android:layout_weight="20"/>
        <Button
            android:fontFamily=" serif"
            android:textSize="27dp"
            android:id="@+id/four"
            android:background="#000036"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="-7dp"
            android:text="4"
            android:layout_width="0dp"
            android:layout_marginRight="-7dp"
            android:layout_marginTop="-6dp"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <Button
            android:fontFamily=" serif"
            android:id="@+id/five"
            android:background="#000036"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="-7dp"
            android:text="5"
            android:textSize="27dp"
            android:layout_width="0dp"
            android:layout_marginRight="-7dp"
            android:layout_marginTop="-6dp"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <Button
            android:id="@+id/six"
            android:text="6"
            android:fontFamily=" serif"
            android:background="#000036"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:textSize="27dp"
            android:layout_marginTop="-6dp"
            android:layout_marginBottom="-7dp"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <Button
            android:id="@+id/minus"
            android:text="-"
            android:layout_width="0dp"
            android:layout_marginBottom="-2dp"
            android:background="#ffeffd"
            android:textSize="40dp"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_weight="15">

        <Button
            android:id="@+id/answ"
            android:text="ans"
            android:background="#ffeffd"
            android:layout_width="0dp"
            android:textSize="22dp"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <Button
            android:id="@+id/one"
            android:text="1"
            android:layout_marginTop="-7dp"
            android:layout_marginRight="-7dp"
            android:fontFamily=" serif"
            android:layout_width="0dp"
            android:textSize="27dp"
            android:background="#000036"
            android:textColor="#FFFFFF"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <Button
            android:id="@+id/two"
            android:background="#000036"
            android:textColor="#FFFFFF"
            android:text="2"
            android:layout_marginTop="-7dp"
            android:layout_marginRight="-7dp"
            android:textSize="27dp"
            android:layout_width="0dp"
            android:fontFamily=" serif"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <Button
            android:id="@+id/three"

            android:background="#000036"
            android:textColor="#FFFFFF"
            android:text="3"
            android:layout_marginTop="-7dp"
            android:textSize="27dp"
            android:layout_width="0dp"
            android:fontFamily=" serif"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <Button
            android:id="@+id/plus"
            android:background="#ffeffd"
            android:text="+"
            android:layout_width="0dp"
            android:textSize="27dp"
            android:layout_marginBottom="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_weight="11">

        <Button
            android:id="@+id/delete"

            android:text="del"
            android:textSize="22dp"
            android:background="#ffeffd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <Button
            android:textSize="27dp"
            android:id="@+id/decimal"
            android:text="."
            android:layout_width="0dp"
            android:background="#ffeffd"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <Button
            android:id="@+id/zero"
            android:background="#ffeffd"
            android:text="0"
            android:textSize="27dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <Button
            android:id="@+id/equalto"
            android:textSize="27dp"
            android:background="#ffbb91"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="41.5"/>
    </LinearLayout>

</LinearLayout>

